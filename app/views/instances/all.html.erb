<%- model_class = Instance.new.class -%>
<h1><%=t '.title', default: model_class.model_name.human %></h1>

<div class="well">
    <table class="table table-striped">
        <thead>
            <tr>
                <th><%= model_class.human_attribute_name(:name) %></th>
                <th><%= model_class.human_attribute_name(:advertising) %></th>
                <th><%= model_class.human_attribute_name(:defaultLanguage) %></th>
                <th><%= model_class.human_attribute_name(:planningTool) %></th>
                <th><%= model_class.human_attribute_name(:users) %></th>
                <th><%= model_class.human_attribute_name(:articles) %></th>
                <th><%=t '.actions', default: t("helpers.actions") %></th>
            </tr>
        </thead>
        <tbody>
            <% @instances.each do |instance| %>
                <tr>
                    <td><%= link_to instance.name, instance_path(instance) %></td>
                    <td><%= boolean_icon(instance.advertising) %></td>
                    <td><%= instance.defaultLanguage %></td>
                    <td><%= boolean_icon(instance.planningTool) %></td>
                    <td><%= instance.user_count %></td>
                    <td><%= instance.article_count %></td>
                    <td>
                        <%= link_to edit_instance_path(instance), :class => 'btn btn-mini' do %>
                            <i class="icon icon-pencil"></i>
                        <% end %>

                        <%= link_to instance_path(instance),
                            :method => :delete,
                            :data => {:confirm => t('.confirm', default: t("helpers.links.confirm"))},
                            :class => 'btn btn-mini btn-danger' do %>

                            <i class="icon icon-trash"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to t('instances.new', default: t("helpers.instances.new")),
        "/instances/new",
        :class => 'btn btn-primary' %>
</div>
<%- model_class = @user.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @user.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:email) %>:</strong><br>
  <%= @user.email %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:is_admin) %>:</strong><br>
  <%= @user.is_admin %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:color) %>:</strong><br>
  <%= @user.color %>
</p>

<% if has_superadmin_privileges? %>
  <div class="form-actions">
    <%= link_to edit_user_path(@user), :class => 'btn' do %>
      <i class="icon icon-pencil"></i>
    <% end %>
    <%= link_to user_path(@user),
        :method => 'delete',
        :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
        :class => 'btn btn-danger' do %>
      <i class="icon icon-trash"></i>
    <% end %>
  </div>
<% end %>
<h1>&nbsp;</h1>

<table class="table table-bordered table-condensed article">
	<tr>
		<td>
			<div class="pull-right">
				<% if has_admin_privileges? || @article.user == current_user %>
					<%= link_to edit_article_path(@article), :class => 'btn' do %>
						<i class="icon icon-pencil"></i>
					<% end %>

					<%= link_to article_path(@article),
						:method => 'delete',
						:class => 'btn btn-danger',
						:data => {:confirm => t('.confirm', :default => t("helpers.links.confirm"))} do %>

						<i class="icon icon-trash"></i>
					<% end %>
				<% end %>
			</div>

			<%= avatar(@article.user) %>

			<h2>
				<%= link_to @article.title, article_path(@article) %>
			</h2>

			<nobr>
				<%= link_to @article.user.name, user_path(@article.user) %> at
				<%=l @article.created_at, format: :short %>
			</nobr>
		</td>
	</tr>

	<tr>
		<td>
			<%= auto_link(@article.content.html_safe) %>

			<br /><br /><br />

			<div class="advertising">
				<div class="ad">
					<%= t('ad') %>
					<script type="text/javascript"><!--
					google_ad_client = "ca-pub-4129785061498511";
					/* Subwire Artikel */
					google_ad_slot = "0223575696";
					google_ad_width = 728;
					google_ad_height = 90;
					//-->
					</script>
					<script type="text/javascript"
					src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
					</script>
				</div>
			<div class="advertising">
		</td>
	</tr>

	<tr>
		<td>
			<div class="comments">
				<%= render :partial => 'shared/comments', :locals => {:article => @article} %>
			</div>
		</td>
	</tr>
</table>
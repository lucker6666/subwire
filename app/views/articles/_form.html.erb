<%= form_for @article, html: { class: 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.text_field :title, { class: 'text_field article-title', placeholder:  t("helpers.title"), autocomplete: :off } %>
  </div>
  <div class="control-group">
    <%= f.cktext_area :content %>
  </div>

  <% if @article.new_record? %>
    <div class="control-group">
     <%= f.label :is_editable, class: 'control-label' %>

     <div class="controls">
         <%= f.check_box :is_editable, {class: 'check_box'} %>
     </div>
   </div>
  <% else %>
  <div class="control-group">
    <%= text_field_tag :change_summary, '', { class: 'text_field article-title', placeholder: "Change summary", autocomplete: :off } %>
  </div>
  <% end %>
  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                articles_path, class: 'btn' %>
  </div>
<% end %>

<!DOCTYPE html>
<html>
	<head>
		<title>
			BrainDump

			<% if notifications.length > 0 %>
				(<%= notifications.length %>)
			<% end %>
		</title>

		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript">
			</script>
		<![endif]-->

		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>

		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	</head>

	<body>
		<div class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="/">BrainDump</a>

					<div class="nav-collapse">
						<ul class="nav">
							<li class="dropdown">
							    <% if notifications.length > 0 %>
								    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
								    	<i class="icon icon-exclamation-sign"></i>
								    	Notifications

								    	<span class="badge badge-info">
								    		<%= notifications.length %>
								    	</span>
								        <b class="caret"></b>
								    </a>

								    <ul class="dropdown-menu">
								    	<% notifications.each do |notification| %>
									    	<li>
									    		<a href="<%= notification_path(notification) %>">
									    			<%= notification_icon(notification) %>
									    			<%= notification.message.html_safe %>
									    		</a>
									    	</li>
									    <% end %>
								    </ul>
								<% else %>
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								    	<i class="icon icon-exclamation-sign"></i>
								    	Notifications
								        <b class="caret"></b>
								    </a>

									<ul class="dropdown-menu">
										<li>There are no unread notifications.</li>
									</ul>
							    <% end %>
							</li>

							<li>
								<%= link_to new_article_path do %>
							    	<i class="icon icon-file"></i>
							    	New Article
								<% end %>
							</li>

							<% if current_user.is_admin %>
								<li>
									<%= link_to users_path do %>
							    		<i class="icon icon-user"></i>
										User management
									<% end %>
								</li>

								<li>
									<%= link_to links_path do %>
							    		<i class="icon icon-screenshot"></i>
										Link management
									<% end %>
								</li>
							<% else %>
								<li>
									<%= link_to edit_user_path(current_user) do %>
							    		<i class="icon icon-user"></i>
										Your profile
									<% end %>
								</li>
							<% end %>

							<li>
								<%= link_to destroy_user_session_path, :method => :delete do %>
							    	<i class="icon icon-remove"></i>
									Logout
								<% end %>
							</li>
						</ul>
					</div>

					<ul class="nav pull-right">
						<li class="divider-vertical"></li>
						<li class="dropdown">
						    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
						    	<i class="icon icon-calendar"></i>
								<%=l Date.today, format: :long %>

						        <b class="caret"></b>
						    </a>

						    <div class="dropdown-menu">
						    	<table class="table table-striped table-bordered table-condensed">
						    		<thead>
						    			<tr>
						    				<th>&nbsp;</th>
						    				<th><nobr>15. May</nobr> (Mon)</th>
						    				<th><nobr>16. May</nobr> (Tue)</th>
						    				<th><nobr>17. May</nobr> (Wed)</th>
						    				<th><nobr>18. May</nobr> (Thu)</th>
						    				<th><nobr>19. May</nobr> (Fri)</th>
						    				<th><nobr>20. May</nobr> (Sat)</th>
						    				<th><nobr>21. May</nobr> (Sun)</th>
						    			</tr>
						    		</thead>

						    		<tbody>
						    			<% User.all.each do |user| %>
							    			<tr>
							    				<th><%= user.name %></th>

							    				<%
							    					7.times do |i|
							    						color = rand(1..3)

							    						if color == 1
							    				%>
									    					<td class="green">
									    						<i class="icon icon-ok"></i>
									    					</td>
						    					<%		elsif color == 2 %>
						    								<td class="yellow">
									    						<i class="icon icon-question-sign"></i>
									    					</td>
						    					<%		else %>
						    								<td class="red">
									    						<i class="icon icon-remove"></i>
									    					</td>
						    					<%		end %>
							    				<% 	end %>
							    			</tr>
							    		<% end %>
						    		</tbody>
						    	</table>
						    </div>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="container content">
			<div class="row">
				<div class="span9">
					<%= yield %>
				</div>

				<div class="span3 sidebar">
					<div class="well">
						<h2>Bookmarks</h2>

						<ul class="bookmarks nav nav-list">
							<% Link.all.each do |link| %>
								<li>
									<a href="<%= link.href %>" target="_blank">
										<% if !link.icon.empty? %>
											<i class="icon icon-<%= link.icon %>"></i>
										<% end %>

										<%= link.name %>
									</a>
								</li>
							<% end %>
						</ul>
					</div>
				</div>
			</div>

			<%= render :partial => 'shared/footer' %>
		</div>

		<%= render :partial => 'shared/flash_messages' %>
	</body>
</html>

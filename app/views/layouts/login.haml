!!!
%html
  %head
    %title
      - if @notificationCount && @notificationCount > 0
        (#{@notificationCount}) &nbsp;
      = @subwireTitle
    = render partial: 'shared/head'
    = stylesheet_link_tag "layouts/login", media: "all"

  %body.login
    - @background = login_background
    %img.background-image{:src => "/assets/backgrounds/#{@background[:file]}"}/

    %div{:class => "login-form #{@containerClass}"}
      = yield

    = render partial: 'shared/footer', :locals => {:background => @background}
    = render partial: 'shared/flash_messages'
    = render partial: 'shared/ga'

    :javascript
      $(function() {
        $('input#user_email').focus();
      });
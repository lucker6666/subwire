- if can?(:edit, @current_channel) && !@current_channel.nil?
  %li.dropdown.iconOnly
    %a.dropdown-toggle{"data-placement" => "bottom", "data-toggle" => "dropdown", :href => "#", :rel => "tooltip", :title => t 'tooltip.channelSettings'}
      %i.icon-cog
    %ul.channels-dropdown.dropdown-menu
      %li
        = link_to channel_relationships_path(@current_channel) do
          %i.icon.icon-user
          = t "application.user_management"
      %li
        = link_to channel_links_path(@current_channel) do
          %i.icon.icon-screenshot
          = t "application.link_management"
      %li
        = link_to edit_channel_path(@current_channel) do
          %i.icon.icon-cog
          = t "channels.edit"

<% if flash[:alert] %>
	<script type="text/javascript">
		$(function() {
			$.jGrowl.defaults.sticky = true;
			$.jGrowl.defaults.position = "bottom-right";

			<%
				if flash[:alert].kind_of?(Array)
					flash[:alert].each do |message|
			%>
				$.jGrowl("<%= message %>");
			<%
					end
				else
			%>
				$.jGrowl("<%= flash[:alert] %>");
			<% end %>
		});
	</script>
<% end %>
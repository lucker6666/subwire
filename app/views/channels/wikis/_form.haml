= form_for [current_channel, @wiki], html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.text_field :title, { class: 'text_field message-title', placeholder:  t("helpers.title"), autocomplete: :off }

  .control-group
    = f.cktext_area :content

  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), channel_wikis_path(current_channel), class: 'btn'

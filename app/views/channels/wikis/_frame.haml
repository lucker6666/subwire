.well
  %h1
    %i.icon.icon-book
    = title

    .btn-group
      = link_to channel_wikis_home_path(current_channel), {class: 'btn btn-small', data: {container: 'body'}, rel: 'tooltip', title: t('wiki.tabs.home')} do
        %i.icon.icon-home

      = link_to channel_wikis_path(current_channel), {class: 'btn btn-small', data: {container: 'body'}, rel: 'tooltip', title: t('wiki.tabs.pages')} do
        %i.icon.icon-list

    .btn-group
      = render partial: 'shared/new', locals: {url: new_channel_wiki_path(current_channel), tip: 'wiki.new'}

      - if @wiki
        = link_to edit_channel_wiki_path(current_channel, @wiki), {class: 'btn btn-small', data: {container: 'body'}, rel: 'tooltip', title: t('wiki.edit')} do
          %i.icon.icon-pencil
  = yield
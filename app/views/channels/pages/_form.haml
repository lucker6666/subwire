= form_for(@page, url: channel_wiki_index_path(@current_channel)) do |f|
  - if @page.errors.any?
    #error_explanation
      %h2
        = pluralize(@page.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :user
    %br/
    = f.text_field :user
  .field
    = f.label :channel
    %br/
    = f.text_field :channel
  .actions
    = f.submit

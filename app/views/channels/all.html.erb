<%- model_class = Channel.new.class -%>
<h1><%=t '.title', default: model_class.model_name.human %></h1>

<div class="well">
    <table class="table table-striped">
        <thead>
            <tr>
                <th><%= model_class.human_attribute_name(:name) %></th>
                <th><%= model_class.human_attribute_name(:advertising) %></th>
                <th><%= model_class.human_attribute_name(:defaultLanguage) %></th>
                <th><%= model_class.human_attribute_name(:planningTool) %></th>
                <th><%= model_class.human_attribute_name(:users) %></th>
                <th><%= model_class.human_attribute_name(:articles) %></th>
                <th><%=t '.actions', default: t("helpers.actions") %></th>
            </tr>
        </thead>
        <tbody>
            <% @channels.each do |channel| %>
                <tr>
                    <td><%= link_to channel.name, channel_path(channel) %></td>
                    <td><%= boolean_icon(channel.advertising) %></td>
                    <td><%= channel.defaultLanguage %></td>
                    <td><%= boolean_icon(channel.planningTool) %></td>
                    <td><%= channel.user_count %></td>
                    <td><%= channel.article_count %></td>
                    <td>
                        <%= link_to edit_channel_path(channel), class: 'btn btn-mini' do %>
                            <i class="icon icon-pencil"></i>
                        <% end %>

                        <%= link_to channel_path(channel),
                            method: :delete,
                            data: {confirm: t('.confirm', default: t("helpers.links.confirm"))},
                            class: 'btn btn-mini btn-danger' do %>

                            <i class="icon icon-trash"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <%= link_to t('channels.new', default: t("helpers.channels.new")),
        "/channels/new",
        class: 'btn btn-primary' %>
</div>
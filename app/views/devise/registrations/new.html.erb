
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<fieldset>
        <div class="clearfix">
  			<%= f.text_field :name, :class => 'text_field', :placeholder => t('helpers.name')  %>
        </div>

        <div class="clearfix">
  			<%= f.text_field :email, :class => 'text_field', :placeholder => t('helpers.email')  %>
        </div>

        <div class="clearfix">
  			<%= f.password_field :password, :class => 'text_field', :placeholder => t('helpers.password') %>
        </div>

        <div class="clearfix">
  			<%= f.password_field :password_confirmation, :class => 'text_field', :placeholder => t('helpers.password_confirmation') %>
        </div>

	  	<div align="center">
	  		<%= f.submit t("helpers.sign_up"), :class => "btn btn btn-success btn-large" %>
	  		<%= link_to t("helpers.sign_in"), new_session_path(resource_name), :class => "btn btn btn-large" %>
	  	</div>
    </fieldset>
<% end %>



<%- model_class = @link.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @link.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:href) %>:</strong><br>
  <%= @link.href %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:icon) %>:</strong><br>
  <%= @link.icon %>
</p>

<div class="form-actions">
  <%= link_to edit_link_path(@link), :class => 'btn' do %>
    <i class="icon icon-pencil"></i>
  <% end %>
  <%= link_to link_path(@link),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' do %>
    <i class="icon icon-trash"></i>
  <% end %>
</div>

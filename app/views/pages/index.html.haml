.well
  %h1 Listing pages
  %table
    %tr
      %th Title
      %th Content
      %th User
      %th Channel
      %th
      %th
      %th
    - @pages.each do |page|
      %tr
        %td= page.title
        %td= page.content
        %td= page.user
        %td= page.channel
        %td= link_to 'Show', page
        %td= link_to 'Edit', edit_channel_wiki_path(page)
        %td= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }
  %br/
  = link_to 'New Page', new_channel_wiki_path(@current_channel)

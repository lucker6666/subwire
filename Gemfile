source 'http://rubygems.org'

# Base
gem 'rails', '3.2.8'
gem 'sqlite3'
gem 'mysql2'
gem 'bcrypt-ruby', '~> 3.0.0'
gem 'devise', '2.1.0'
gem 'paperclip'
gem 'rmagick'

# Assets
group :assets do
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
  gem 'sass-rails',   '~> 3.2.3'
end

# Frontend
gem 'twitter-bootstrap-rails'
gem 'jquery-rails'
gem 'ckeditor'
gem 'will_paginate'
gem 'will_paginate_twitter_bootstrap'
gem 'rails_autolink'
gem 'rmagick'
gem 'html_truncator'
gem 'exception_notification'
gem 'tire'

# Testing
group :test do
  gem "email_spec"
  gem "cucumber-rails", require: false
  gem "capybara"
  gem "database_cleaner"
  gem "launchy"
end

group :development, :test do
  gem "rspec-rails"
  gem "factory_girl_rails"
  gem 'libnotify'
  gem 'guard-rspec'
  gem 'rb-inotify'
end
